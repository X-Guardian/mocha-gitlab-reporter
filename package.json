{
  "name": "mocha-gitlab-reporter",
  "version": "1.0.0-beta.15",
  "description": "A GitLab CI compatible JUnit XML reporter for Mocha. Generates test reports that display correctly in GitLab's merge request and pipeline interfaces.",
  "main": "index.js",
  "scripts": {
    "ci": "npm run lint && npm run test",
    "lint": "./node_modules/.bin/eslint '*.js' 'test/**/*.js'",
    "test": "MOCHA_FILE=test/mocha.xml node_modules/.bin/mocha test --reporter=spec",
    "tdd": "MOCHA_FILE=test/mocha.xml node_modules/.bin/mocha test --reporter=min --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/X-Guardian/mocha-gitlab-reporter"
  },
  "keywords": [
    "mocha",
    "gitlab",
    "gitlab-ci",
    "junit",
    "reporter"
  ],
  "author": {
    "name": "Simon Heather"
  },
  "license": "MIT",
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "chai": "^6.0.0",
    "chai-xml": "^0.4.1",
    "eslint": "^8.57.1",
    "mocha": "^9.2.2",
    "mocha9": "npm:mocha@^9.1.2",
    "mocha10": "npm:mocha@^10.0.0",
    "mocha11": "npm:mocha@^11.0.0",
    "rimraf": "^3.0.2",
    "test-console": "^2.0.0",
    "xmllint": "^0.1.1"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "md5": "^2.3.0",
    "mkdirp": "^3.0.1",
    "strip-ansi": "^6.0.1",
    "xml": "^1.0.1"
  },
  "peerDependencies": {
    "mocha": ">=2.2.5"
  }
}
