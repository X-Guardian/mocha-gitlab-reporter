{
  "name": "mocha-gitlab-reporter",
  "version": "1.0.1",
  "description": "A GitLab CI compatible JUnit XML reporter for Mocha. Generates test reports that display correctly in GitLab's merge request and pipeline interfaces.",
  "main": "index.js",
  "scripts": {
    "ci": "npm run lint && npm run test",
    "lint": "eslint \"*.js\" \"test/**/*.js\"",
    "test": "mocha test --reporter=spec",
    "tdd": "mocha test --reporter=min --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/X-Guardian/mocha-gitlab-reporter.git"
  },
  "keywords": [
    "mocha",
    "gitlab",
    "gitlab-ci",
    "junit",
    "reporter"
  ],
  "author": {
    "name": "Simon Heather"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "chai": "^6.0.0",
    "chai-xml": "^0.4.1",
    "eslint": "^8.57.1",
    "mocha": "^11.0.0",
    "mocha9": "npm:mocha@^9.2.2",
    "mocha10": "npm:mocha@^10.2.0",
    "mocha11": "npm:mocha@^11.0.0",
    "rimraf": "^6.0.1",
    "test-console": "^2.0.0",
    "xmllint": "^0.1.1"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "mkdirp": "^3.0.1",
    "strip-ansi": "^6.0.1",
    "xml": "^1.0.1"
  },
  "peerDependencies": {
    "mocha": ">=2.2.5"
  }
}
